rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write images
    // This uses Firebase Anonymous Authentication
    // Users must be signed in (anonymously) to access storage
    match /images/{imageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write images in test folder
    match /test/{imageId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}